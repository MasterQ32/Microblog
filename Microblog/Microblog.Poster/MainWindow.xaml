<Window x:Class="Microblog.Poster.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Microblog.Poster"
		mc:Ignorable="d"
		Title="MainWindow" Height="350" Width="525">
	<DockPanel>
		<StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center">Public Key:</TextBlock>
			<TextBox x:Name="pubkey" IsReadOnly="True" Width="300" Margin="8,4,4,8" VerticalAlignment="Center"/>
			<Button Margin="8,4,8,8" Padding="4" Click="Button_Click">Post!</Button>
		</StackPanel>
		<TextBox x:Name="content" AcceptsReturn="True" AcceptsTab="True" Margin="8" FontFamily="Consolas">
			# Title
		</TextBox>
	</DockPanel>
</Window>
